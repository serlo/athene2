                            <?php echo $this->placeholder('controls'); ?>
                        <?php endif; ?>
                    </div>
                    <ol id="breadcrumbs">
                        <?php echo $this->navigation('default_navigation')
                            ->breadcrumbs()
                            ->setRenderInvisible(true)
                            ->setPartial('layout/navigation/partial/breadcrumbs')
                            ->render();
                        ?>
                    </ol>
