                        </div>
                    </div>
                    <div id="ory-editor-toolbar-functions">
                        <!--More functions of the Editor...-->
                    </div>
                </div>
            </div>
        </nav>
    <?php endif; ?>
    <?php if (!$this->layout()->fullWidth): ?>
        </div>
    <?php endif; ?>
