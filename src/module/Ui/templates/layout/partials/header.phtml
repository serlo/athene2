                        </a>
                        <?php
                        echo $this->navigation('top_auth_navigation')
                            ->menu()
                            ->setUlClass('dropdown-menu dropdown-menu-right')
                            ->setPartial('layout/navigation/horizontal')
                            ->render();
                        ?>
                    </li>
                </ul>
                <ul class="notifications nav navbar-nav">
                    <?php echo $this->notifications()->render(); ?>
                </ul>
            </div>
        </nav>

