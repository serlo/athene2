<header id="header">
    <?php if (!$this->layout()->hideTopbar): ?>
        <?php echo $this->partial('layout/partials/top-bar'); ?>
    <?php endif; ?>
    <?php if (!$this->layout()->fullWidth): ?>
        <div class="container">
    <?php endif; ?>
    <?php if (!$this->layout()->hideTopbar): ?>
        <nav id="header-nav">
            <div id="mobile-nav-toggle">
                <button>
                    <span class="sr-only"><?php echo $this->translate('Toggle navigation'); ?></span>
