{% set title = 'text-solution' | trans %}
{% set revision = entity.getCurrentRevision() %}

<article itemscope itemtype="http://schema.org/Article">
    <div class="row {{ collapse is defined ? 'collapse' : '' }}" id="solution-{{ entity.getId() }}">
        <section class="col-xs-12">
            <div itemprop="articleBody">
                <div class="clearfix">
                    <div class="pull-right">
                        {% include 'entity/view/partials/actions/small-essential' %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 editable"
                         data-id="{{ entity.getId() }}"
                         data-edit-field="content"
                         data-edit-type="ory"
                    >
                        {% if revision %}
                            {{ renderer.toHtml(revision.get('content')) | raw }}
                        {% elseif not entity.getHead() %}
                            {% trans %} A solution has been created but no content has been added yet or it is pending approval. {% endtrans %}
                        {% endif %}
                    </div>
                    <div class="col-xs-12">
                        {% include 'entity/view/partials/license/minimalistic' %}
                    </div>
                </div>
            </div>
        </section>
        <footer class="col-xs-12">
            <div class="row">
                <div class="col-xs-12 hidden-xs">
                    {{ discussion(entity).render('minimalistic', 2, true) }}
                </div>
            </div>
        </footer>
    </div>
</article>
